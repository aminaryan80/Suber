<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.suber">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Suber"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity
            android:name=".ui.panel.DiscountCodesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.panel.ChargeAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.panel.PassengerProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.panel.FindingDriverActivity"
            android:exported="false" />
        <activity
            android:name=".ui.account.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.panel.DriverPanelActivity"
            android:exported="false" />
        <activity
            android:name=".ui.panel.PassengerPanelActivity"
            android:exported="false" />
        <activity
            android:name=".ui.account.RegisterActivity"
            android:exported="false" />
    </application>

</manifest>